fun all_except_option(s, lst) =
    let
	fun filter_lst lst =
	    case lst of
		[] => []
	      | x :: xs' => if same_string(x, s) then filter_lst xs' else x :: filter_lst xs'

	val filtered_lst = filter_lst lst
    in
	if filtered_lst = lst then NONE else SOME filtered_lst
    end				  

